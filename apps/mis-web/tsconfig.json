{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "scripts/generateSchemas.ts",
    "scripts/generateClients.ts",
    "../../libs/config/src/appConfig/clusterTexts.ts",
    "src/pages/api/init/createInitAdmin.ts",
    "../../libs/web/src/utils/compareBreakpoints.ts",
    "../../libs/web/src/utils/refreshToken.tsx",
    ".next/types/**/*.ts"
  ]
}

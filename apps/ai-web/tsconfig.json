{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // "baseUrl": "src",
    "baseUrl": ".",
  },
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "src/*": [
      "src/*"
    ],
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "preferTsExts": true
  }
}

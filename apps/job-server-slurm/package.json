{
  "name": "@scow/job-server-slurm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e env/.env.dev -- npx nodemon --watch src -e ts,tsx --exec npx ts-node -r tsconfig-paths/register src/index.ts",
    "build": "pnpm prepareDev && rimraf build && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "serve": "node build/index.js",
    "test": "jest",
    "prepareDev": "pnpm protos",
    "protos": "tsgrpc-cli protos",
    "orm": "dotenv -e env/.env.dev -- npx mikro-orm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ddadaal/tsgrpc-server": "0.14.0",
    "@ddadaal/tsgrpc-utils": "0.14.0",
    "@grpc/grpc-js": "1.6.7",
    "@scow/config": "workspace:*",
    "node-ssh": "12.0.4",
    "shell-quote": "1.7.3",
    "luxon": "3.0.1"
  },
  "devDependencies": {
    "@ddadaal/tsgrpc-cli": "0.13.0",
    "@types/google-protobuf": "3.15.6",
    "@types/node-cron": "3.0.2",
    "@types/ssh2": "1.11.4",
    "@types/luxon": "2.3.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./src/mikro-orm.config.js"
    ]
  },
  "volta": {
    "extends": "../../package.json"
  }
}

{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "build/**"
      ]
    },
    "prepareDev": {
      "dependsOn": [
        "^@scow/protos#build",
        "^@scow/scheduler-adapter-protos#build"
      ],
      "outputs": [
        "api-routes-schemas.json",
        "src/generated"
      ],
      "inputs": [
        "src/pages/api/**/*.ts"
      ]
    },
    "test": {
      "outputs": [],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    },
    "@scow/protos#generate": {
      "inputs": [
        "node_modules/@scow/grpc-api/**/*.proto",
        "buf.gen.yaml"
      ],
      "outputs": [
        "generated/**"
      ]
    },
    "@scow/protos#build": {
      "dependsOn": [
        "^@scow/protos#generate"
      ],
      "inputs": [
        "generated/**"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "@scow/scheduler-adapter-protos#generate": {
      "inputs": [
        "node_modules/@scow/grpc-adapter/**/*.proto",
        "buf.gen.yaml"
      ],
      "outputs": [
        "generated/**"
      ]
    },
    "@scow/scheduler-adapter-protos#build": {
      "dependsOn": [
        "^@scow/scheduler-adapter-protos#generate"
      ],
      "inputs": [
        "generated/**"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "//#lint:ts": {
      "inputs": [
        "**/*.tsx",
        "**/*.ts"
      ],
      "outputs": [
        ".eslintcache"
      ]
    },
    "lint": {
      "inputs": [
        "**/*.proto"
      ]
    }
  }
}

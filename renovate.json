{
  "extends": [
    "config:base"
  ],
  "ignorePaths": [
    "docker-compose.dev.yml",
    "dev/ldap/Dockerfile",
    ".devcontainer/**"
  ],
  "timezone": "Asia/Shanghai",
  "schedule": [
    "every sunday"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchFiles": [
        "docs/package.json"
      ],
      "matchPackagePatterns": [
        "@mdx-js/react",
        "react",
        "react-dom",
        "@types/react"
      ],
      "enabled": false
    },
    {
      "matchPackagePatterns": [
        "pino",
        "@uiw/react-codemirror"
      ],
      "enabled": false
    },
    {
      "matchPackagePatterns": [
        "ldapjs",
        "@types/ldapjs",
        "@tanstack/react-query"
      ],
      "enabled": false
    }
  ]
}

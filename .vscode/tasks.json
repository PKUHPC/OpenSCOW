{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch TS Errors",
      "type": "shell",
      "command": "${workspaceFolder}/node_modules/.bin/tsc",
      "args": [
        "-w",
        "-p",
        ".",
        "--noEmit"
      ],
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    }
  ]
}
